<odoo>
  <data>

    <record id="russian_requisites_view_partner_form_inherit" model="ir.ui.view">
      <field name="name">russian_requisites.view_partner_form_inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">

        <xpath expr="//page[@name='sales_purchases']" position="after">
          <page string="Passport" attrs="{'invisible': [('company_type','=', 'company')]}">
            <group>
              <field name="passport_number"/>
              <field name="passport_date"/>
              <field name="passport_department"/>
            </group>
          </page>
        </xpath>

        <!--xpath expr="//div[@class='o_address_format']" position="after"-->
        <xpath expr="//field[@name='vat']" position="after">
          <field name="okpo" attrs="{'invisible': [('company_type','!=', 'company')]}"/>
          <field name="psrn" attrs="{'invisible': [('company_type','!=', 'company')]}"/>
          <field name="iec" attrs="{'invisible': [('company_type','!=', 'company')]}"/>
        </xpath>

        <!-- Field string was changed to `tax id` in Odoo12 -->
        <xpath expr="//field[@name='vat']" position="attributes">
          <attribute name="string">TIN</attribute>
        </xpath>

      </field>
    </record>

  </data>
</odoo>
